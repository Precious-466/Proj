<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.apassignment1.TouristFormController"
            prefWidth="400">

    <content>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Add New Tourist" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TextField fx:id="usernameField" promptText="Username" />
            <TextField fx:id="fullnameField" promptText="Full Name" />
            <PasswordField fx:id="passwordField" promptText="Password" />
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType fx:id="saveButtonType" text="Save" buttonData="OK_DONE"/>
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>

</DialogPane>
